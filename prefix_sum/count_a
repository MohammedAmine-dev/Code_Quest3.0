#include <bits/stdc++.h>
using namespace std;
int main(){
    string s;
    cin >> s;
    long long q;
    cin>>q;
    int n=s.length();
    vector<int > prefix(n+2,0);
    int nb=0;
    for (int i=2;i<=n;i++)
    {
        if (s[i-1]=='a')
        {prefix[i]=nb+1;
        nb++;}
    }
    while(q--)
    {
        long long a,b;
        cin>>a>>b;
        cout<< prefix[b]-prefix[a-1]<<endl;
    }
}