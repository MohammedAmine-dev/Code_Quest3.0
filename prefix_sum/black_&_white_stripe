#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        long long n,k;
        cin>>n>>k;
        vector<char>arr(n);
        for (int i=0;i<n;i++)
        {
            cin>>arr[i];
        }
        vector<int>w(n+1,0);
        for(int i=1;i<=n;i++) w[i]=w[i-1]+int(arr[i-1]=='W');
        int res=INT_MAX;
        for (int i=k;i<=n;i++)
        {
            res=min(res,-w[i-k]+w[i]);
        }
        cout<<res<<endl;

    }
}