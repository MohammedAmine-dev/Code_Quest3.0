#include <bits/stdc++.h>
using namespace std;
bool canmake(long long time,long long t,vector <long long>&machines);

int main()
{
    long long n,t;
    cin>>n>>t;
    vector<long long>arr(n);
    for (int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    long long left=1,right=1e18;
    long long mid;
    while(left<right)
    {
       mid =left+(right-left)/2;
        if (canmake(mid,t,arr))
        {
            right=mid;
        }
        else{
            left=mid+1;
        }
        
    }
    cout<<left<<endl;
}
bool canmake(long long time,long long t,vector <long long>&machines)
{
     long long total_products = 0;
    
    for (long long m : machines) {
        total_products += time / m;
        
        if (total_products >= t) return true;
    }
    
    return false;
}
