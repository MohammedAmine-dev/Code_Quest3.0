#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
    long long n,k;
    cin>>n>>k;
    vector <long long> arr(n);
    for (long long i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    sort(arr.begin(),arr.end());
    vector <long long> prefix(n+1);
    prefix[0]=0;
    for (long long i=1;i<n+1;i++)
    {
        prefix[i]=prefix[i-1]+arr[i-1];
    }
   long long m,som=0;
   for (m=0;m<=k;m++)
    {
        som=max(som,prefix[n-k+m]-prefix[2*m]);
    }
cout <<som<<endl;

}
}